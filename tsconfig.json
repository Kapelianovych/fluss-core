{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": true,
    "declarationDir": "build",
    "noImplicitThis": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
